using System;
using System.Security.Cryptography;
using System.Text;

class Program
{
    static string CalculateHash(string message)
    {
        using (var sha256 = SHA256.Create())
        {
            byte[] hashedBytes = sha256.ComputeHash(Encoding.UTF8.GetBytes(message));
            return BitConverter.ToString(hashedBytes).Replace("-", "");
        }
    }

    static bool VerifyHash(string message, string hashToCompare)
    {
        string generatedHash = CalculateHash(message);
        return string.Equals(generatedHash, hashToCompare, StringComparison.OrdinalIgnoreCase);
    }

    static void Main()
    {
        string message = "This is a secret message."; // Повідомлення для хешування

        string hashedMessage = CalculateHash(message);
        Console.WriteLine($"Hash of the message: {hashedMessage}");

        // Перевірка автентичності повідомлення
        string hashToCompare = hashedMessage; // Хеш, який потрібно порівняти
        bool isVerified = VerifyHash(message, hashToCompare);

        if (isVerified)
        {
            Console.WriteLine("Message is authentic.");
        }
        else
        {
            Console.WriteLine("Message verification failed. The message may have been tampered with.");
        }
    }
}



